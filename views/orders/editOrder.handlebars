{{!< main}}
<h1 class="mb-4">Edit Order</h1>
<form action="/orders/{{order.id}}/edit" method="POST">
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" id="item" name="item" class="form-control" value="{{order.item}}" required>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" value="{{order.quantity}}" required>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" id="status" name="status" class="form-control" value="{{order.status}}" required>
    </div>
    <button type="submit" class="btn btn-primary">Update Order</button>
</form>
