{{!-- views/orders/index.handlebars --}}

<!DOCTYPE html>
<html>
<head>
    <title>Orders</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Orders</h1>
        <a href="/orders/add" class="btn btn-primary mb-3">Add New Order</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.item}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/orders/{{this.id}}/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/orders/{{this.id}}/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4">No orders found.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
